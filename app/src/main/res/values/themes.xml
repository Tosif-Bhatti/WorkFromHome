        <item name="fontFamily">@font/noyh_r_regular</item>
    </style>

    //CarbohydratesQuantityText
    <style name="CarbohydratesQuantityText">
        <item name="android:textColor">@color/text_blue_revers_kt</item>
        <item name="android:textSize">@dimen/_30sp</item>
        <item name="fontFamily">@font/noyh_r_regular</item>
    </style>

    //ActionBarTitleStyle
    <style name="ActionBarTitleStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_25sp</item>
        <item name="fontFamily">@font/noyh_r_medium</item>
    </style>

    //TreatHomeScreen Heading Text
    <style name="HeadingOfTreatHomeScreen">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">35sp</item>
        <item name="fontFamily">@font/noyh_r_regular</item>
    </style>

    //TreatHomeScreen SunHeading Text
    <style name="SubHeadingOfTreatHomeScreen">
        <item name="android:textColor">@color/gray_sub_heading</item>
        <item name="android:textSize">@dimen/_20sp</item>
        <item name="fontFamily">@font/noyh_r_regular</item>
    </style>

    //TodayActivityHeading
    <style name="TodayActivityHeadingText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_20sp</item>
        <item name="fontFamily">@font/noyh_r_semi_light</item>
    </style>

</resources>