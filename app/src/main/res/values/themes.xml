<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Android_practice" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#FFFFFF</item>
        <!-- Customize your theme here. -->
    </style>
    
    //Custom Chips
    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="checkedIconTint">@color/chip_text_color</item>
    </style>
    
    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor">@color/blue_bank</item>
    </style>

    //Custom SearchView
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="tint">@color/white</item>
    </style>

    //PastReservation Rental TextView Style
    <style name="PRTextViewRentalData" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_15sp</item>
    </style>

    //PastReservation TextView Style
    <style name="PRTextViewData" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_15sp</item>
    </style>

    //CornerRadius Theme
    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    //WalkingCard Style for Reverse Kt
    <style name="WalkingCard_textStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">@font/noyh_r_regular</item>
    </style>

    //Walking Card Subheading
    <style name="WalkingCardSubHeading">
        <item name="android:textColor">@color/gray_sub_heading</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/noyh_r_semi_light</item>
    </style>

    //TextViewDescription with Black for Reverse Kt
    <style name="TextViewDescription">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_20sp</item>
        <item name="fontFamily">@font/noyh_r_regular</item>
    </style>

    //Description Detail Text
    <style name="DescriptionDetailText">
        <item name="android:textColor">@color/gray_sub_heading</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/noyh_r_regular</item>
    </style>

    //TextView Blue with 20sp for Reverse Kt
    <style name="TextViewBlue20sp">
        <item name="android:textColor">@color/text_blue_revers_kt</item>
        <item name="android:textSize">@dimen/_20sp</item>
    </style>

    //GlucoseCardHeadingText
    <style name="GlucoseCardHeadingText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_20sp</item>
        <item name="fontFamily">@font/noyh_r_semi_light</item>
    </style>

    //GlucoseCardSubHeading
    <style name="GlucoseSubHeadingText">
        <item name="android:textColor">@color/glucose_sub_heading</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="fontFamily">@font/noyh_r_light</item>
    </style>

    //WorkOutDetailCards
    <style name="WorkOutCardHeadingText">
        <item name="android:textColor">@color/gray_revers_kt</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="fontFamily">@font/noyh_r_regular</item>
    </style>

    <style name="PercentageSignTextView">
        <item name="android:textColor">@color/mediumGray</item>
        <item name="android:textSize">18sp</item>
    </style>

    //WorkOutSubHeadingCards
    <style name="WorkOutDetailCardSubHeading">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/noyh_r_regular</item>
    </style>

    //MedicineCardHeading
    <style name="MedicineCardHeadingText">
        <item name="android:textColor">@color/mediumGray</item>
        <item name="android:textSize">@dimen/_20sp</item>
        <item name="fontFamily">@font/noyh_r_semi_light</item>
    </style>

    //MedicineQuantityText
    <style name="MedicineQuantityText">
        <item name="android:textColor">@color/text_blue_revers_kt</item>
        <item name="android:textSize">@dimen/_15sp</item>
        <item name="fontFamily">@font/noyh_r_regular</item>
    </style>

    //SysCardDataHeadingText
    <style name="SysCardHeadingText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">@font/noyh_r_medium</item>
    </style>

    //SysCardQuantityText
    <style name="SysCardQuantityText">
        <item name="fontFamily">@font/noyh_r_regular</item>
